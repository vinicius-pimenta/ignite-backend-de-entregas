// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Deliveryman {
  id         String       @id @default(uuid())
  username   String       @unique
  password   String
  Deliveries Deliveries[]

  @@map("deliveryman")
}

model Clients {
  id         String       @id @default(uuid())
  username   String       @unique
  password   String
  Deliveries Deliveries[]

  @@map("clients")
}

model Deliveries {
  id                String      @id @default(uuid())
  fk_id_client      String
  client            Clients     @relation(fields: [fk_id_client], references: [id])
  fk_id_deliveryman String
  deliveryman       Deliveryman @relation(fields: [fk_id_deliveryman], references: [id])
  item_name         String
  created_at        DateTime    @default(now())
  end_at            DateTime    @default(now())

  @@map("deliveries")
}
